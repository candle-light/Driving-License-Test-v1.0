<?xml version="1.0" encoding="utf-8"?>

<!--  RED  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.badcompany.licensetest.ProfileActivity">

    <!--  ORANGE  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/holo_orange_dark"
        android:padding="10dp">

        <!--  YELLOW  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/holo_orange_light"
            android:padding="3dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/manprofile"
                android:src="@drawable/cstm_prf_border" />

            <Button
                android:id="@+id/ch_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change.."
                android:textSize="15dp" />
        </LinearLayout>

        <!--  YELLOW  -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@android:color/holo_orange_light"
            android:padding="10dp">


            <!--  PURPLE  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="4"
                android:background="@android:color/holo_purple"
                android:padding="2dp">

                <!--  BLUE  -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:background="@android:color/holo_blue_light"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/acpt_green1"
                        android:textSize="10dp"
                        android:gravity="center_horizontal"
                        android:text="Succesfully answered \n questions: "/>

                    <TextView
                        android:id="@+id/que_answered"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/acpt_green1"
                        android:textSize="20dp"
                        android:text="XXXX"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/dcln_red1"/>
                    <TextView
                        android:id="@+id/que_answered_prcnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:textColor="@color/acpt_green1"
                        android:textSize="20dp"
                        android:text="50%"/>


                </LinearLayout>
                <!--  BLUE  -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@android:color/holo_blue_light"
                    android:padding="10dp">
                </LinearLayout>
            </LinearLayout>

            <!--  PURPLE  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/holo_purple"
                android:padding="2dp">
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <!-- ORANGE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@android:color/holo_orange_dark"
        android:orientation="vertical"
        android:padding="10dp"></LinearLayout>

</LinearLayout>