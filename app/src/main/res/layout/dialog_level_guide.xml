<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lvl_guide_border"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lvl_guide_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/lvl_guide_info_1"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="end"
        android:src="@drawable/img1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:background="@drawable/lvl_border" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:layout_gravity="start|bottom"
                android:background="@drawable/lvl_border2" />


        </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cstm_lvl_round"
        android:textSize="20sp"
        android:text="10"
        android:textStyle="bold"
        android:gravity="center"
        />


    </LinearLayout>

</LinearLayout>